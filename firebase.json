{
    "hosting": {
        "public": "client/build",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "server/**",
            "src/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": {
        "source": "functions"
    }
}